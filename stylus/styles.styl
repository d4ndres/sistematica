.buffer
  height: 65vh
  padding-top: 80px
  .containerNews
    color: black
    border: black solid 1px
    middle(80%)
    margin-top: 20px
    margin-bottom: 20px
    height: 60vh
    display: grid
    grid-template-columns: repeat(3, 1fr)
    grid-template-rows: repeat(4, 1fr)
    grid-column-gap: 5px
    grid-row-gap: 5px
    grid-template-areas: "alertas titleNews titleNews " "alertas news news" "alertas news news" "alertas news news"
    .alertas
      grid-area: alertas
    .titleNews
      grid-area: titleNews
    .news
      grid-area: news
    .column
      background: rgba(255,255,255,0.5)
      height: 100%



