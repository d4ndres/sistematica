.firstBlock
  background-image: url(../image/programming.jpg)
  background-size: cover

.containerHeader
  width: 100%
  position: fixed
  transition: 0.5s

.backgroundScroll
  background: black


.header
  background: transparent
  position: relative
  height: 80px

.containerMainTitle
  // border: red solid 1px
  display: inline-block
  font-family: classic-font
  font-size: 30px
  color: white
  margin: 0
  position: absolute
  left: 40px
  top: 20px
  a
    text-decoration: none
    color: white

.mainMenuOption
  // border: red solid 1px
  display: inline-block
  position: absolute
  right: 40px
  top: 30px
  .dad-list
    margin: 0
    display: block
    .item
      font-size: 20px
      cursor: pointer
      display: inline-block
      margin-top: 0
      padding-left: 50px
      color: white
      &::after
        content: "V"

.buffer
  height: 65vh
  padding-top: 80px
  .containerNews
    color: black
    border: black solid 1px
    middle(80%)
    margin-top: 20px
    margin-bottom: 20px
    height: 60vh
    display: grid
    grid-template-columns: repeat(3, 1fr)
    grid-template-rows: repeat(4, 1fr)
    grid-column-gap: 5px
    grid-row-gap: 5px
    grid-template-areas: "alertas titleNews titleNews " "alertas news news" "alertas news news" "alertas news news"
    .alertas
      grid-area: alertas
    .titleNews
      grid-area: titleNews
    .news
      grid-area: news
    .column
      background: rgba(255,255,255,0.5)
      height: 100%



.contentBody
  .secondTitle
    position: relative
    left: 40px
    font-family: classic-font
    font-size: 24px
  .linkSelf
    text-decoration: none
    color: black
    cursor: pointer



.containerTema
  display: grid
  grid-template-columns: repeat(3, 1fr)
  justify-items: center
  .tema
    display: inline-block
    margin: 0
    padding: 0
    position: relative

    .titleImage
      font-size: 20px
      text-align: center
      border-top: black dashed 1px
      padding-bottom: 10px
    img
      border-radius: 20px 0
      overflow: auto
      border: black solid 1px
      border-bottom: none
      transition: 0.8s opacity , 1s transform
      mixin-16-9(17vw)
      margin: 0
    .descriptionImage
      transition: 0.8s opacity , 1s transform
      mixin-16-9(17vw)
      position: absolute
      top: 0
      border: gray outset 2px
      border-radius: 20px 0
      overflow: auto
      color: red
      transform: rotateY(180deg)
      opacity: 0
      z-index: 0
      text-align: center
    &:hover
      img
        transform: rotateY(180deg)
        opacity: 0
        cursor: pointer
    &:hover
      .descriptionImage
        transform: rotateY(0deg)
        opacity: 1
        cursor: pointer





.footer
  background: black
