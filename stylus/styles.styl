.containerTema
  max-width: 80vw
  text-align: center
  margin: 0 auto
  display: grid
  grid-template-columns: 1fr 1fr 1fr
  .tema
    display: inline-block
    margin: 0
    padding: 0
    position: relative
    margin: auto
    .titleImage
      font-size: 20px
      text-align: center
      border-top: black dashed 1px
      padding-bottom: 10px

    img
      border-radius: 20px 0
      overflow: auto
      border: black solid 1px
      border-bottom: none
      transition: 0.8s opacity , 1s transform
      mixin-16-9(17vw)
      margin: 0
    .descriptionImage
      background: white
      transition: 0.8s opacity , 1s transform
      mixin-16-9(17vw)
      position: absolute
      top: 0
      border: gray outset 2px
      border-radius: 20px 0
      overflow: auto
      color: red
      transform: rotateY(180deg)
      opacity: 0
      z-index: 0
      text-align: center
    &:hover
      img
        transform: rotateY(180deg)
        opacity: 0
        cursor: pointer
    &:hover
      .descriptionImage
        transform: rotateY(0deg)
        opacity: 1
        cursor: pointer

